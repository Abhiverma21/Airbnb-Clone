<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Airbnb Clone Navbar</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

  <style>
    /* === Base Navbar Styling === */
    .navbar {
      background-color: #fff;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
      padding: 0.7rem 4.5rem;
      transition: all 0.3s ease;
    }

    .navbar-brand i {
      font-size: 1.8rem;
      color: #ff385c;
      transition: transform 0.3s ease;
    }

    .navbar-brand i:hover {
      transform: rotate(-15deg);
    }

    .navbar-toggler {
      border: none;
      padding: 0.3rem;
      background: transparent;
    }

    .navbar-toggler:focus {
      box-shadow: none;
    }

    .navbar-toggler-icon {
      width: 1.6rem;
      height: 1.6rem;
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23ff385c' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%280, 0, 0, 0.5%29' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    /* === Links === */
    .navbar-nav .nav-link {
      font-weight: 500;
      color: #333;
      transition: color 0.25s ease, transform 0.25s ease;
      padding: 0.6rem 1rem;
    }

    .navbar-nav .nav-link:hover {
      color: #ff385c;
      transform: translateY(-1px);
    }

    /* === Search Bar === */
    .search-bar {
      display: flex;
      align-items: center;
      border: 1px solid #ddd;
      border-radius: 50px;
      padding: 0.4rem 1rem;
      transition: all 0.3s ease;
      background-color: #fff;
    }

    .search-bar:hover {
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .search-bar input {
      border: none;
      outline: none;
      width: 140px;
      font-size: 0.95rem;
    }

    .search-bar button {
      background-color: #ff385c;
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background 0.25s ease, transform 0.2s ease;
    }

    .search-bar button:hover {
      background-color: #e03150;
      transform: scale(1.05);
    }

    /* === Responsive Mobile Adjustments === */
    @media (max-width: 768px) {
      .navbar {
        padding: 0.8rem 1rem;
      }

      .search-bar {
        width: 100%;
        margin: 1rem 0;
        visibility: hidden;
      }

      .navbar-collapse {
        width: 100%;
        background-color: #fff;
        border-radius: 12px;
        padding: 1rem;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
      }

      .navbar-collapse.show {
        animation: slideDown 0.3s ease forwards;
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .navbar-nav .nav-link {
        padding: 0.8rem 0;
        border-bottom: 1px solid #f1f1f1;
      }

      .navbar-nav .nav-link:last-child {
        border-bottom: none;
      }
    }
  </style>
</head>

<body>
  <!-- === NAVBAR START === -->
  <nav class="navbar navbar-expand-md sticky-top">
    <div class="container-fluid">
      <!-- Brand -->
      <a class="navbar-brand" href="/listings">
        <i class="fa-solid fa-compass"></i>
      </a>

      <!-- Hamburger -->
      <button class="navbar-toggler" type="button" id="navbarToggle">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible Content -->
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <!-- Left Links -->
        <ul class="navbar-nav me-auto">
          <li class="nav-item text-center">
            <a class="nav-link" href="/listings">View All Listings</a>
          </li>
        </ul>

        <!-- Search Bar -->
        <form class="d-flex search-bar" role="search">
          <input id="search-in" type="text" placeholder="Search Destination" />
          <button id="search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>

        <!-- Right Side (Auth Links) -->
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item">
            <a class="nav-link" href="/listings/new">Airbnb your home</a>
          </li>

          <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signUp"><b>Sign Up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
          <% } %>

          <% if (currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- === NAVBAR END === -->

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Toggle Functionality -->
  <script>
    const navbarToggler = document.getElementById("navbarToggle");
    const navbarCollapse = document.getElementById("navbarNavDropdown");

    navbarToggler.addEventListener("click", () => {
      const isOpen = navbarCollapse.classList.contains("show");

      if (isOpen) {
        navbarCollapse.classList.remove("show");
      } else {
        navbarCollapse.classList.add("show");
      }
    });
  </script>

  <!-- Search Functionality -->
  <script>
    const countries = ["USA", "Canada", "Mexico", "France", "Germany", "Italy", "Spain", "Australia", "Japan", "India"];
    const searchInput = document.getElementById("search-in");
    const searchBtn = document.getElementById("search-btn");

    searchBtn.addEventListener("click", (event) => {
      event.preventDefault();
      const inputValue = searchInput.value.trim();
      if (countries.includes(inputValue)) {
        console.log(`Match found: ${inputValue}`);
      } else {
        console.log(`No match found for: ${inputValue}`);
      }
    });
  </script>
</body>
</html>

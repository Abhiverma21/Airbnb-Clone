<% layout("/layouts/boilerplate") -%>

<style>
  .login-container {
    min-height: calc(100vh - 180px);
    display: flex;
    align-items: center;
  }
  
  .login-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .login-card:hover {
    transform: translateY(-5px);
  }
  
  .login-header {
    background: linear-gradient(135deg, #ff385c 0%, #e31c5f 100%);
    padding: 2rem;
    text-align: center;
    color: white;
  }
  
  .login-header h3 {
    margin: 0;
    font-size: 1.75rem;
    font-weight: 700;
  }
  
  .login-header p {
    margin: 0.5rem 0 0;
    opacity: 0.9;
  }
  
  .login-form {
    padding: 2rem;
  }
  
  .form-floating {
    margin-bottom: 1rem;
  }
  
  .form-floating > .form-control {
    padding: 1rem 0.75rem;
  }
  
  .form-control:focus {
    border-color: #ff385c;
    box-shadow: 0 0 0 0.25rem rgba(255, 56, 92, 0.25);
  }
  
  .btn-login {
    background: #ff385c;
    border: none;
    color: white;
    padding: 0.8rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .btn-login:hover {
    background: #e31c5f;
    transform: translateY(-1px);
  }
  
  .form-check-input:checked {
    background-color: #ff385c;
    border-color: #ff385c;
  }
  
  .login-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
    margin-top: 1.5rem;
  }
  
  .login-footer a {
    text-decoration: none;
    font-weight: 500;
  }
  
  .login-footer a:hover {
    text-decoration: underline;
  }
  
  .remember-forgot {
    font-size: 0.9rem;
  }
  
  .remember-forgot a {
    text-decoration: none;
  }
  
  .remember-forgot a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-container {
      padding: 1rem;
      min-height: calc(100vh - 120px);
    }
    
    .login-header {
      padding: 1.5rem;
    }
    
    .login-form {
      padding: 1.5rem;
    }
  }
</style>

<div class="login-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-card">
          <div class="login-header">
            <h3>Welcome back</h3>
            <p>Log in to continue to HotelVault</p>
          </div>

          <div class="login-form">
            <form action="/login" method="POST" class="needs-validation" novalidate>
              <input type="hidden" name="redirectUrl" value="<%= typeof redirectUrl !== 'undefined' ? redirectUrl : '' %>">

              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username or Email" required>
                <label for="username">Username or Email</label>
                <div class="invalid-feedback">Please enter your username or email.</div>
              </div>

              <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                <label for="password">Password</label>
                <div class="invalid-feedback">Please enter your password.</div>
              </div>

              <div class="d-flex justify-content-between align-items-center mb-4 remember-forgot">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="remember" name="remember">
                  <label class="form-check-label" for="remember">Remember me</label>
                </div>
                <a href="/forgot-password">Forgot password?</a>
              </div>

              <div class="d-grid">
                <button class="btn btn-login" type="submit">
                  Log In <i class="fas fa-arrow-right ms-2"></i>
                </button>
              </div>

              <div class="login-footer">
                <p class="mb-0">Don't have an account? <a href="/signUp">Sign up</a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })();
</script>


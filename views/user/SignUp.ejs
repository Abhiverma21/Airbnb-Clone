<% layout("/layouts/boilerplate") -%>

<style>
  .signup-container {
    min-height: calc(100vh - 180px);
    display: flex;
    align-items: center;
  }
  
  .signup-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .signup-card:hover {
    transform: translateY(-5px);
  }
  
  .signup-header {
    background: linear-gradient(135deg, #ff385c 0%, #e31c5f 100%);
    padding: 2rem;
    text-align: center;
    color: white;
  }
  
  .signup-header h3 {
    margin: 0;
    font-size: 1.75rem;
    font-weight: 700;
  }
  
  .signup-header p {
    margin: 0.5rem 0 0;
    opacity: 0.9;
  }
  
  .signup-form {
    padding: 2rem;
  }
  
  .form-control:focus {
    border-color: #ff385c;
    box-shadow: 0 0 0 0.25rem rgba(255, 56, 92, 0.25);
  }
  
  .btn-signup {
    background: #ff385c;
    border: none;
    color: white;
    padding: 0.8rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .btn-signup:hover {
    background: #e31c5f;
    transform: translateY(-1px);
  }
  
  .input-group-text {
    background: #f8f9fa;
    border-right: none;
  }
  
  .input-group .form-control {
    border-left: none;
  }
  
  .input-group .btn-outline-secondary {
    border-color: #ced4da;
    color: #6c757d;
  }
  
  .input-group .btn-outline-secondary:hover {
    background-color: #f8f9fa;
    color: #ff385c;
  }
  
  .signup-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
    margin-top: 1.5rem;
  }
  
  .signup-footer a {
    color: #ff385c;
    text-decoration: none;
    font-weight: 500;
  }
  
  .signup-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .signup-container {
      padding: 1rem;
      min-height: calc(100vh - 120px);
    }
    
    .signup-header {
      padding: 1.5rem;
    }
    
    .signup-form {
      padding: 1.5rem;
    }
  }
</style>

<div class="signup-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
          <% if (success && success.length) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success[0] %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>
          <% if (error && error.length) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error[0] %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>

          <% const showInlineErrors = !(error && error.length); %>
        <div class="signup-card">
          <div class="signup-header">
            <h3>Create your account</h3>
            <p>Join HotelVault to book amazing stays</p>
          </div>
          
          <div class="signup-form">

          <form action="/signUp" method="POST" class="needs-validation" novalidate>
            <div class="mb-4">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                    placeholder="Username"
                    required
                  />
                </div>
                <% if (showInlineErrors) { %>
                <div class="invalid-feedback">Please provide a username.</div>
                <% } %>
            </div>

            <div class="mb-4">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Email address"
                    required
                  />
                </div>
                <% if (showInlineErrors) { %>
                <div class="invalid-feedback">Please provide a valid email.</div>
                <% } %>
            </div>

            <div class="mb-4">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Password"
                    required
                  />
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="togglePassword"
                  >
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
                <% if (showInlineErrors) { %>
                <div class="invalid-feedback" id="password-requirements">
                  Password must contain at least 8 characters, one uppercase letter, one lowercase letter, and one number.
                </div>
                <% } %>
            </div>

            <div class="mb-4">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <input
                    type="password"
                    class="form-control"
                    id="password2"
                    name="password2"
                    placeholder="Confirm Password"
                    required
                  />
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="togglePassword2"
                  >
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
                <% if (showInlineErrors) { %>
                <div class="invalid-feedback" id="confirm-feedback">
                  Passwords must match.
                </div>
                <% } %>
            </div>

            <div class="d-grid">
              <button class="btn btn-signup" type="submit">
                Create account <i class="fas fa-arrow-right ms-2"></i>
              </button>
            </div>

            <div class="signup-footer">
              <p class="mb-0">Already have an account? <a href="/login">Log in</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function () {
  "use strict";
  var forms = document.querySelectorAll(".needs-validation");
  Array.prototype.slice.call(forms).forEach(function (form) {
    form.addEventListener("submit", function (event) {
      event.preventDefault(); // Prevent default submission first
      
      var pw = document.getElementById("password");
      var pw2 = document.getElementById("password2");
      var valid = true;

      // Reset validation state
      form.classList.add("was-validated");
      
      // Check required fields
      if (!form.checkValidity()) {
        valid = false;
      }

      // Password validation
      if (!validatePassword(pw.value)) {
        valid = false;
      }

      // Confirm password check
      if (!validatePasswordMatch()) {
        valid = false;
      }

      // If everything is valid, submit the form
      if (valid) {
        form.submit();
      }
    }, false);
  });
})();

// Password validation function
function validatePassword(password) {
  const requirements = {
    length: password.length >= 8,
    lowercase: /[a-z]/.test(password),
    uppercase: /[A-Z]/.test(password),
    number: /\d/.test(password),
  };

  const isValid = Object.values(requirements).every(Boolean);
  const passwordInput = document.getElementById('password');
  const requirementFeedback = document.getElementById('password-requirements');
  
  if (!isValid) {
    passwordInput.classList.add('is-invalid');
    requirementFeedback.style.display = "block";
  } else {
    passwordInput.classList.remove('is-invalid');
    requirementFeedback.style.display = "none";
  }

  // Check confirm password match if it has a value
  const password2 = document.getElementById('password2');
  if (password2.value) {
    validatePasswordMatch();
  }

  return isValid;
}

// Confirm password validation
function validatePasswordMatch() {
  const password = document.getElementById('password');
  const password2 = document.getElementById('password2');
  const feedback = document.getElementById('confirm-feedback');
  
  if (password.value !== password2.value) {
    password2.classList.add('is-invalid');
    feedback.style.display = "block";
    return false;
  } else {
    password2.classList.remove('is-invalid');
    feedback.style.display = "none";
    return true;
  }
}

// Add real-time validation listeners
document.getElementById('password').addEventListener('input', function(e) {
  validatePassword(e.target.value);
});

document.getElementById('password2').addEventListener('input', validatePasswordMatch);

// Password visibility toggle functions
function togglePasswordVisibility(inputId, buttonId) {
  const toggleBtn = document.getElementById(buttonId);
  const pwField = document.getElementById(inputId);
  
  toggleBtn.addEventListener('click', function () {
    const type = pwField.getAttribute('type') === 'password' ? 'text' : 'password';
    pwField.setAttribute('type', type);
    this.querySelector('i').classList.toggle('fa-eye');
    this.querySelector('i').classList.toggle('fa-eye-slash');
  });
}

// Initialize password toggles
togglePasswordVisibility('password', 'togglePassword');
togglePasswordVisibility('password2', 'togglePassword2');
</script>


